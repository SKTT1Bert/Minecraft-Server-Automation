# Terraform Variables Example
# Copy this file to terraform.tfvars and customize as needed

# AWS Configuration
aws_region = "us-east-1"

# Project Settings
project_name = "minecraft-server"
environment  = "production"

# EC2 Instance Configuration
instance_type = "t3.small"  # Options: t2.micro, t3.small, t3.medium

# SSH Key Paths (will be auto-generated if not specified)
# public_key_path  = "~/.ssh/minecraft-key.pub"
# private_key_path = "~/.ssh/minecraft-key.pem"

# Minecraft Server Configuration
minecraft_version     = "1.20.4"
minecraft_memory      = 1024      # Memory in MB
minecraft_max_players = 20        # Maximum players 